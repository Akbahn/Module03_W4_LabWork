<BorderPane prefHeight="368.0" prefWidth="642.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.main.module03_w4_labwork.UserPageController">
   <center>
      <TableView prefHeight="288.0" prefWidth="339.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="85.0" text="First Name" />
          <TableColumn prefWidth="74.0" text="Last Name" />
            <TableColumn prefWidth="90.0" text="Username" />
            <TableColumn prefWidth="72.0" text="Password" />
        </columns>
      </TableView>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <ImageView fitHeight="150.0" fitWidth="139.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefHeight="341.0" prefWidth="87.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="editBtn" mnemonicParsing="false" prefWidth="63.0" text="Edit">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#moveToLoginPage" text="Log Out">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </right>
